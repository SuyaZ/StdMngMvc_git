@model StdMngMvc.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<h1>删除课程</h1>

<div>
    @* <h4>Course</h4> *@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CCredit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CCredit)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PreCourse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PreCourse.CourseName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department.DepartmentID)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <button type="submit" class="btn btn-danger">
            <img src="@Url.Content("~/Images/delete_white.png")" alt="..." style="width: 1.5em; height: 1.5em; margin-right: 0.5em;">&nbsp;删除
        </button>|
        <a asp-action="Index">
            <img src="@Url.Content("~/Images/back.png")" alt="..." style="width: 1em; height: 1em; margin-right: 0.5em;">&nbsp;返回
        </a>
    </form>
</div>
